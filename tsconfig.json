{
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots" : [
      "./node_modules/@umbrik/webtutor-types/lib",
      "./node_modules/@umbrik/webtutor-types/lib/xml"
    ],
    "paths": {
      "@src/*": ["./src/*"]
    },
  },
  "include": [
    "misc/openapi/*.ts",
    "cypress/**/*"
  ],
  "files": [
    "gulpfile.ts",
    ".eslintrc.js",
    "cypress.config.ts",
    "cypress/cypress.d.ts"
  ]
}
